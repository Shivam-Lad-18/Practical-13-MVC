@{
    ViewBag.Title = "Home Page";
}

<main class="container mt-4">

    <h2 class="mb-4">Navigation</h2>
    <div class="mb-4">
        <a href="@Url.Action("Index", "Employee")" class="btn btn-outline-primary me-2">List of Employees</a>
        <a href="@Url.Action("Index", "Designation")" class="btn btn-outline-secondary">List of Designations</a>
    </div>

    <hr />

    <h3 class="mb-3">LINQ Queries</h3>

    <div class="mb-3">
        <p><strong>Query 1:</strong> Display all employee details (Employee ID, First Name, Middle Name, Last Name, Designation Name, DOB, Mobile Number, Address, and Salary).</p>
        <a href="@Url.Action("Query1", "Home")" class="btn btn-primary">
            Show Employee Details
        </a>
    </div>

    <div class="mb-3">
        <p><strong>Query 2:</strong> Show number of employees grouped by Designation Name.</p>
        <a href="@Url.Action("Query2", "Home")" class="btn btn-success">
            Show Employee Count by Designation
        </a>
    </div>

</main>
